%h2 Flight AK #{@flight.id} @ #{@flight.created_at}

.row-fluid
  .span4
    %table.table
      %thead
        %tr
          %th Time
          %th Latitude
          %th Longtitude
          %th Concentration
      %tbody.flight_datas
        - @flight.flight_datas.order(:timestamp).each do |data|
          %tr{'data-lat' => data.lat, 'data-lon' => data.lon, 'data-time' => data.timestamp.to_i, 'data-concentration' => data.concentration}
            %td= data.timestamp.strftime("%H:%m:%S")
            %td= data.lat
            %td= data.lon
            %td= data.concentration
  .span4 
    .well
      #chart
  .span4
    #map(style="width:100%; height:300px;")
    
:javascript
  var map;
  
  google.load("visualization", "1", {packages:["corechart"]});
  
  function initialize() {
  
    var first = new google.maps.LatLng(#{@flight.flight_datas.first.lat}, #{@flight.flight_datas.first.lon});
    var bounds = new google.maps.LatLngBounds(first, first);
    var points = [];
    var chartpoints = [['Time', 'Concentration']];
    var offset = #{@flight.flight_datas.first.timestamp.to_i};
    $("tbody.flight_datas tr").each(function(idx, tr){
      var point = new google.maps.LatLng(parseFloat($(tr).data("lat")), parseFloat($(tr).data("lon")));
      bounds.extend(point);
      points.push(point);
      chartpoints.push([parseInt($(tr).data("time"))-offset, parseFloat($(tr).data("concentration"))]);
    });
    
    
    var mapOptions = {
      zoom: 8,
      center: new google.maps.LatLng(#{@flight.flight_datas.first.lat}, #{@flight.flight_datas.first.lon}),
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    map = new google.maps.Map(document.getElementById('map'), mapOptions);
    
    var flightPath = new google.maps.Polyline({
        path: points,
        strokeColor: '#FF0000',
        strokeOpacity: 1.0,
        strokeWeight: 2
    });
    flightPath.setMap(map);
    map.fitBounds(bounds);
    
    function drawChart(){
      var data = google.visualization.arrayToDataTable(chartpoints);
      console.log(chartpoints);
      var chart = new google.visualization.LineChart(document.getElementById('chart'));
    
      var options = {
        legend: {position: "none"},
        vAxis: {title: ">0.5 micron particles per 0.01 cubic feet", textPosition: "in"},
        hAxis: {title: "Time (seconds)"},
        height: 400       
      };
    
      chart.draw(data, options);
    }
    
    drawChart();
  }
  

  
  google.maps.event.addDomListener(window, 'load', initialize);
  
